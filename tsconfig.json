{
  "compilerOptions": {
    "target": "ES2020", // Output JS version
    "module": "node16", // Module system (or "ESNext" for ESM)
    "outDir": "./dist", // Output directory
    "rootDir": "./src", // Source directory
    "declaration": true, // Generate .d.ts type definitions
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Improve ESM/CJS compatibility
    "skipLibCheck": true,
    "moduleResolution": "node16" // Resolve modules Node-style
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
